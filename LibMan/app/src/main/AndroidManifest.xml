<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for storage and internet access -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PublicLIbrary"
        tools:targetApi="31">

        <!-- Define each activity in the application -->
        <activity
            android:name=".Member"
            android:exported="false" />

        <activity
            android:name=".Book"
            android:exported="false" />

        <activity
            android:name=".UserViewMember"
            android:exported="false" />
        <activity
            android:name=".ViewReservedBookUser"
            android:exported="false" />
        <activity
            android:name=".BookDetailsActivity"
            android:exported="false" />

        <activity
            android:name=".ViewReservedBook"
            android:exported="true" />
        <activity
            android:name=".ViewBookUser"
            android:exported="true" />

        <activity
            android:name=".EditBook"
            android:exported="true" />

        <activity
            android:name=".ViewBook"
            android:exported="true" />
        <activity
            android:name=".EditBookUser"
            android:exported="true" />

        <activity
            android:name=".ReservationActivity"
            android:exported="true" />
        <activity
            android:name=".ReservationActivityUser"
            android:exported="true" />
        <activity
            android:name=".EditMember"
            android:exported="false" />
        <activity
            android:name=".ViewMember"
            android:exported="true" />

        <activity
            android:name=".AddMember"
            android:exported="true" />

        <activity
            android:name=".SelectProfile"
            android:exported="true" />

        <activity
            android:name=".AddBook"
            android:exported="true" />

        <activity
            android:name=".AdminHome"
            android:exported="true" />

        <activity
            android:name=".UserHome"
            android:exported="true" />

        <activity
            android:name=".UserRegister"
            android:exported="false" />

        <activity
            android:name=".AdminLogin"
            android:exported="false" />

        <activity
            android:name=".AdminRegister"
            android:exported="false" />

        <activity
            android:name=".UserLogin"
            android:exported="false" />

        <activity
            android:name=".Dashboard"
            android:exported="false" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Meta-data for preloaded fonts -->
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
