<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loadscreenbackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:background="@drawable/loadscreenbackground"
            android:breakStrategy="high_quality"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@id/textView5"
            android:layout_marginTop="-145dp"
            android:background="@drawable/loadscreenbackground"
            android:backgroundTint="@color/green"
            android:breakStrategy="high_quality"
            android:gravity="center"
            android:text="Select Your Role "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/selectProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView6"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/selectAdmin"
                android:layout_width="96dp"
                android:layout_height="58dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/loadscreenbackground"
                android:buttonTint="@color/green"
                android:onClick="selectProfile"
                android:padding="5dp"
                android:text="Admin"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/green"
                android:textColorLink="@color/green"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/selectUser"
                android:layout_width="96dp"
                android:layout_height="58dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/loadscreenbackground"
                android:foregroundTint="@color/black"
                android:onClick="selectProfile"
                android:padding="5dp"
                android:rotation="0"
                android:text="User"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/green"
                android:textColorLink="@color/green"
                android:textStyle="bold"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/selectUser"
                android:layout_width="411dp"
                android:layout_height="58dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/loadscreenbackground"
                android:backgroundTint="@color/green"
                android:button="?attr/dividerHorizontal"
                android:foregroundTint="@color/black"
                android:onClick="selectProfile"
                android:rotation="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/green"
                android:textColorLink="@color/green"
                android:textStyle="bold"
                android:visibility="visible" />

        </RadioGroup>

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:layout_below="@id/selectProfile"
            android:layout_marginTop="-442dp"
            app:srcCompat="@drawable/ic_launcher" />
    </RelativeLayout>
</ScrollView>
