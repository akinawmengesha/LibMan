<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loadscreenbackground"
    tools:context=".AddBook">

    <!-- ScrollView to enable scrolling -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <!-- LinearLayout for centering content vertically and horizontally -->
        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <!-- ImageView for app logo -->

            <!-- TextView for title -->

            <!-- EditText for Book Name -->

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Add a New Book"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txtbname"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_background_round_normal"
                android:ems="10"
                android:hint="Book Name"
                android:inputType="text"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/green" />

            <!-- EditText for Book Author -->
            <EditText
                android:id="@+id/txtbauthor"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_background_round_normal"
                android:ems="10"
                android:hint="Book Author"
                android:inputType="text"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/green" />

            <!-- EditText for Book Publisher -->
            <EditText
                android:id="@+id/txtbpublication"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_background_round_normal"
                android:ems="10"
                android:hint="Book Publisher"
                android:inputType="text"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/green" />

            <!-- EditText for Book Quantity -->
            <EditText
                android:id="@+id/txtquntity"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_background_round_normal"
                android:ems="10"
                android:hint="Book Quantity"
                android:inputType="number"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/green" />

            <!-- Button to add book -->
            <Button
                android:id="@+id/btnadd"
                android:layout_width="310dp"
                android:layout_height="69dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/design_default_color_secondary"
                android:fontFamily="@font/poppins_medium"
                android:text="Add Book"
                android:textAlignment="center"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
